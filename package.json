{
  "name": "clarity-runtime",
  "version": "0.5.0",
  "private": true,
  "type": "module",
  "description": "Local control-plane runtime for managing Clarity and remote MCP services",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev:daemon": "tsx src/cmd/clarityd.ts",
    "dev:ctl": "tsx src/cmd/clarityctl.ts",
    "start": "node dist/cmd/clarityd.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint:eslint": "eslint src src/tests --ext .ts --max-warnings=0",
    "lint": "npm run typecheck && npm run lint:eslint",
    "format": "prettier --check .github README.md package.json .prettierrc.json .release-please-config.json .release-please-manifest.json",
    "format:write": "prettier --write .github README.md package.json .prettierrc.json .release-please-config.json .release-please-manifest.json",
    "test:unit": "npm run build && node --test dist/tests/*.test.js",
    "test:coverage": "npm run build && c8 --check-coverage --lines 20 --functions 20 --branches 10 --statements 20 node --test dist/tests/*.test.js",
    "test": "npm run build && node --test dist/tests/*.test.js"
  },
  "bin": {
    "clarityd": "dist/cmd/clarityd.js",
    "clarityctl": "dist/cmd/clarityctl.js"
  },
  "dependencies": {
    "commander": "^14.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "c8": "^10.1.3",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.1",
    "prettier": "^3.5.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
